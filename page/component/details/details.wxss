.main{padding-bottom:50px;}

 swiper-item image {
    width: 100%;
    height: 100%;
} 

.pro_room{padding:10px 8px;border-bottom:8px solid #ddd;}
.pro_title{display:flex;justify-content: space-between;margin-bottom:6px;}
.pro_title text{height:40px;line-height:20px;font-size:15px;overflow:hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-box-orient: vertical;-webkit-line-clamp: 2;}
.pro_title image{width:50px;height:50px;}
.pro_price>view{display:inline-block;}
.pro_price .newprice{color:red;}
.pro_price .newprice text{font-size:18px;}
.pro_price .oldprice{text-decoration:line-through;color:#999;font-size:12px;}
.query{padding:6px 0;border-bottom:1px solid #ddd;margin-bottom:8px;}
.query text{display: block;font-size:12px;color:#999}




.saleCart{position:fixed;bottom:0;left:0;right:0;height:50px;display:flex;justify-content: center;background:#fff;z-index:999}
.saleCart .customer{width:14%;display:flex;flex-direction:column;padding:3px 0;box-sizing: border-box;}
.saleCart .customer image{width:25px;height:25px;order: 1;margin:0 auto;}
.saleCart .customer text{order: 2;text-align:center;font-size:12px;margin-top:2px;}

.saleCart .subhome{width:14%;}
.saleCart .home{height:100%;display:flex;flex-direction:column;padding:3px 0;box-sizing: border-box;}
.saleCart .home image{width:25px;height:25px;order: 1;margin:0 auto;}
.saleCart .home text{order: 2;text-align:center;font-size:12px;margin-top:2px;}


.saleCart .salecar{width:14%;position: relative;display:flex;flex-direction:column;}

.saleCart .cartcar{height:100%;display:flex;flex-direction:column;padding:3px 0;box-sizing: border-box;}
.saleCart .cartcar image{width:25px;height:25px;order: 1;margin:0 auto;}
.saleCart .cartcar text{order: 2;text-align:center;font-size:12px;margin-top:2px;}

.saleCart .joincart{width:29%;line-height:50px;background:#ff9600;color:#fff;text-align:center;font-size:14px;}

.saleCart .oncart{width:29%;line-height:50px;background:red;text-align:center;color:#fff;font-size:14px;}


.pro_sku{height:40px;font-size:14px;line-height:40px;display:flex;justify-content: left}
.pro_sku text{width:40px;}
.pro_sku .prolist{height:28px;line-height:28px;border:1px solid #ccc;margin:6px 6px 0 0;text-align:center;padding:0 15px;box-sizing:border-box}
.pro_sku .hassku{border:1px solid red;color:red}



.pro_sku .pro-operation{display:flex;justify-content: left;text-align:center;}
.pro_sku .operation-reduce,.pro_sku .operation-add,.pro_sku .operation-num{width:24px;height:24px;line-height:24px;border:1px solid #ccc;font-size:20px;margin-top:8px;}
.pro_sku .disabled{background:#f5f5f5}


.pro_sku .operation-num{width:30px;font-size:16px;}







.carts-icon-num{
    position: absolute;
    right: 15rpx;
    width: 36rpx;
    height: 36rpx;
    line-height:36rpx;
    text-align:center;
    border-radius: 50%;
    background: #AB956D;
    color: #fff;
    font-size: 24rpx;
}




.goods-tab-nav{
    display: inline-block;
    width: 33.33%;
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #ededed;
    box-sizing: border-box;
    text-align: center;
    color: #c7c7cb;
}
.goods-tab-nav.on{
    color: #bcaa8a;
    border-bottom: 5rpx solid #bcaa8a;
}
.goods-content{padding:10px 0;}
.goods-content image{
    width:100%;
    height:100%;
    margin-left:5px;
    border:none;
}



.aftersale{padding:0 8px;color:#787878;font-size:13px;}
.aftersale text{width:80px;display:block;text-align:center;font-size:15px;color:#444;margin:10px auto;position:relative;}
.aftersale text::before{content:'';width:100rpx;height:2rpx;position:absolute;left:-100rpx;top:20rpx;background:#AB956D}
.aftersale text::after{content:'';width:100rpx;height:2rpx;position:absolute;right:-100rpx;top:20rpx;background:#AB956D}

