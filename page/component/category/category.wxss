

page,.main{
    height: 100%;
}
.search{
    height:55px;
    padding: 10px 5px;
    border:2rpx solid #ddd;
    box-sizing:border-box;
}
.search-text{
    display: flex;
    justify-content: left;
    align-items: center;
    height: 50rpx;
    color: #aaa;
    text-align: center;
    border: 1px solid #ddd;
    border-radius: 10rpx;
    background:#f5f5f5;
    font-size:28rpx;
    padding:6rpx
}
.search-text icon{
    margin:0 10rpx;
}

.category-wrap{display:flex;justify-content: center;}

.categroy-left{
    width: 25%;
    border-right: 1px solid #ddd;

}
.categroy-left .cate-list{
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    border-left: 3px solid #fff;
}
.categroy-left .cate-list.on{
    color: #AB956D;
    border-color: #AB956D;
}
.categroy-right{
    width: 75%;
    overflow: hidden;
    
}
.topsub{text-align:center;}
.topsub image{width:100%;height:120px;border-left:1px solid #ddd}
.topsub text{height:21px;line-height:21px;margin:32rpx 0 40rpx 0;display:inline-block;color:#AB956D;position:relative;}
.topsub text::before{content:'';width:120rpx;height:2rpx;position:absolute;left:-150rpx;top:20rpx;background:#AB956D}
.topsub text::after{content:'';width:120rpx;height:2rpx;position:absolute;right:-150rpx;top:20rpx;background:#AB956D}

.menu{width:30%;height:200rpx;float:left;text-align:center;margin-left:2.5%}
.menu image{width:120rpx;height:120rpx;display:block;margin:0 auto;margin-bottom:12rpx;}
.menu text{font-size:30rpx;}